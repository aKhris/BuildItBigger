<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokeShowActivity">

    <TextView
        android:id="@+id/tv_joke_title"
        android:text="@string/joke_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_joke_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_joke_title"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="What's a funny joke, isn't it? Ha ha ha"
        android:layout_margin="8dp"
        style="@style/TextAppearance.AppCompat.Body1"
        />

</android.support.constraint.ConstraintLayout>